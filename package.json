{
    "name": "Themis",
    "version": "1.0.0-beta0",
    "description": "Visualized AsyncStorage replacement for React Native during development",
    "main": "lib/index.js",
    "author": "Nima Shoghi <nima@nima.sh>",
    "license": "MIT",
    "config": {
        "serverHost": "0.0.0.0",
        "serverPort": 3283,
        "stateFileName": "state.json",
        "theme": "rjv-default",
        "updateInterval": 1000
    },
    "bin": {
        "themis": "src/cli.js"
    },
    "scripts": {
        "build-server": "babel src --out-dir lib --source-maps",
        "run-server": "node lib/server.js",
        "start-server": "npm-run-all --serial build-server run-server",
        "build-viewer": "webpack",
        "run-viewer": "http-server",
        "start-viewer": "npm-run-all --serial build-viewer run-viewer",
        "start": "npm-run-all --parallel start-server start-viewer"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.55",
        "@babel/core": "^7.0.0-beta.55",
        "@babel/plugin-proposal-class-properties": "^7.0.0-beta.56",
        "@babel/preset-env": "^7.0.0-beta.55",
        "@babel/preset-react": "^7.0.0-beta.56",
        "@babel/register": "^7.0.0-beta.56",
        "babel-loader": "8.0.0-beta.4",
        "eslint": "^5.2.0",
        "http-server": "^0.11.1",
        "prettier": "^1.14.0",
        "webpack": "^4.16.4",
        "webpack-cli": "^3.1.0"
    },
    "dependencies": {
        "@babel/polyfill": "^7.0.0-beta.55",
        "hapi": "^17.5.3",
        "jsonfile": "^4.0.0",
        "node-fetch": "^2.2.0",
        "npm-run-all": "^4.1.3",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-json-view": "^1.19.1",
        "shelljs": "^0.8.2"
    }
}
